<Window x:Class="WpfEGridApp.StandardMeasurementsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Standard Measurements" Height="600" Width="800"
        MinHeight="500" MinWidth="700"
        Background="#FF1A2526"
        FontFamily="Inter, Segoe UI" FontSize="14">
    <Window.Resources>
        <!-- Reuse the same styles from MainWindow -->
        <SolidColorBrush x:Key="PrimaryBrush" Color="#FF0078D4"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#FF00B294"/>
        <SolidColorBrush x:Key="OrangeButtonBrush" Color="#FFF28C38"/>
        <SolidColorBrush x:Key="TextBrush" Color="#FFE6ECEC"/>
        <SolidColorBrush x:Key="PanelBackground" Color="#2A3B3C"/>

        <Style TargetType="Button" x:Key="RoundedButtonStyle">
            <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="12"
                                SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF00A88F"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FF008E7A"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#FF6B6B6B"/>
                                <Setter Property="Foreground" Value="#FFAAAAAA"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="BorderBrush" Value="#FF4A5A5B"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="#FF2A3B3C"/>
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ScrollViewer Margin="0" x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="Label">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>

        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </Window.Resources>

    <Border Background="{StaticResource PanelBackground}" CornerRadius="16" Margin="20" Padding="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Orientation="Vertical" Margin="0,0,0,20">
                <TextBlock Text="Standard Measurements" FontSize="20" FontWeight="Bold" 
                          Foreground="{StaticResource TextBrush}" Margin="0,0,0,10"/>
                <TextBlock Text="Definer standard målinger som automatisk kan legges inn basert på tekst i Excel kolonne 2 og 3. Trykk Enter i lengde-feltet for å legge til målet." 
                          FontSize="12" Foreground="#FFB0B8B8" TextWrapping="Wrap"/>
            </StackPanel>

            <!-- Main Content -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="200"/>
                </Grid.ColumnDefinitions>

                <!-- List of Standard Measurements -->
                <Border Background="#FF1A2526" CornerRadius="10" Padding="15" Grid.Column="0" Margin="0,0,10,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Column Headers -->
                        <Grid Grid.Row="0" Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="60"/>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="40"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Aktiv" Grid.Column="0" FontWeight="Bold" Foreground="{StaticResource TextBrush}"/>
                            <TextBlock Text="Kolonne 2 inneholder" Grid.Column="1" FontWeight="Bold" Foreground="{StaticResource TextBrush}"/>
                            <TextBlock Text="Kolonne 3 inneholder" Grid.Column="2" FontWeight="Bold" Foreground="{StaticResource TextBrush}"/>
                            <TextBlock Text="Lengde (mm)" Grid.Column="3" FontWeight="Bold" Foreground="{StaticResource TextBrush}"/>
                            <TextBlock Text="Slett" Grid.Column="4" FontWeight="Bold" Foreground="{StaticResource TextBrush}"/>
                        </Grid>

                        <!-- Scrollable list -->
                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                            <ItemsControl x:Name="MeasurementsList">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="0,5">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="60"/>
                                                <ColumnDefinition Width="150"/>
                                                <ColumnDefinition Width="150"/>
                                                <ColumnDefinition Width="100"/>
                                                <ColumnDefinition Width="40"/>
                                            </Grid.ColumnDefinitions>
                                            <CheckBox Grid.Column="0" IsChecked="{Binding IsEnabled}" HorizontalAlignment="Center"/>
                                            <TextBox Grid.Column="1" Text="{Binding ColumnBText, UpdateSourceTrigger=PropertyChanged}"/>
                                            <TextBox Grid.Column="2" Text="{Binding ColumnCText, UpdateSourceTrigger=PropertyChanged}"/>
                                            <TextBox Grid.Column="3" Text="{Binding Distance, UpdateSourceTrigger=PropertyChanged}"/>
                                            <Button Grid.Column="4" Content="X" Width="30" Height="30" 
                                                   Style="{StaticResource RoundedButtonStyle}"
                                                   Background="#FFFF4444"
                                                   Click="DeleteMeasurement_Click"
                                                   Tag="{Binding}"/>
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Grid>
                </Border>

                <!-- Control Panel -->
                <StackPanel Grid.Column="1" Orientation="Vertical">
                    <TextBlock Text="Legg til ny måling:" FontWeight="Bold" Foreground="{StaticResource TextBrush}" Margin="0,0,0,10"/>

                    <Label Content="Kolonne 2 tekst:"/>
                    <TextBox x:Name="NewColumnBText" ToolTip="Tekst som skal finnes i kolonne 2"/>

                    <Label Content="Kolonne 3 tekst:"/>
                    <TextBox x:Name="NewColumnCText" ToolTip="Tekst som skal finnes i kolonne 3"/>

                    <Label Content="Lengde (mm):"/>
                    <TextBox x:Name="NewDistance" ToolTip="Lengde i millimeter som skal legges inn - Trykk Enter for å legge til"
                             KeyDown="NewDistance_KeyDown"/>

                    <Separator Margin="0,20" Background="#FF4A5A5B"/>

                    <Button Content="Søk og legg inn alle målinger" Click="ApplyAllMeasurements_Click" 
                           Style="{StaticResource RoundedButtonStyle}" Background="{StaticResource AccentBrush}"
                           ToolTip="Søker gjennom Excel-filen og legger inn alle matchende målinger"/>
                </StackPanel>
            </Grid>

            <!-- Status Bar -->
            <Border Grid.Row="2" Background="#FF1A2526" CornerRadius="8" Padding="10" Margin="0,20,0,0">
                <TextBlock x:Name="StatusText" Text="Klar for bruk" Foreground="{StaticResource TextBrush}"/>
            </Border>
        </Grid>
    </Border>
</Window>